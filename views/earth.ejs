<script>
  function getEarthImage(){
    //return the link and Description
    return fetch("https://api.nasa.gov/EPIC/api/natural?api_key=sO5IxzzW7mtK9uXAITFi5RXRRO3eJeljRYlsKmkU")
    .then(response=>response.json())
    .then(data=>{
      let image = document.getElementById("earthImage");
      let caption = document.getElementById("caption");
      console.log(data);
      let imageNum = 0;
      let url = "https://epic.gsfc.nasa.gov/archive/natural/" + data[imageNum].date.substring(0,4) +
      "/" + data[imageNum].date.substring(5,7) + "/" + data[imageNum].date.substring(8,10) + "/png/" +
      data[imageNum].image + ".png";
      image.src = url;;
      caption.innerHTML = data[imageNum].caption;
      //now you have to display only one of the images.
    });
  }
  let data = getEarthImage();
</script>

